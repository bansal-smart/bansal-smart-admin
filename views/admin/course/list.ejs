<%- include('../layouts/header') %>

<style>
    td {
  font-family: 'Roboto', sans-serif;
}
</style>
<div class="content-wrapper">
    
    <div class="card">
        <div class="card-header d-flex align-items-center justify-content-between">
            <h4 class="card-title mb-0"><%= page_name %></h4>
      
            <div class="row">
              <div class="col-12 text-end">
                <% if (req.query.status==='trashed' ) { %>
                <a class="btn btn-primary" href="<%= list_url %>">
                  <i class="fas fa-list"></i> List
                </a>
                <% } else { %>
                <a class="btn btn-danger btn-sm" href="<%= trashed_list_url %>">
                  <i class="fas fa-trash"></i> Trashed List
                </a>
                <% } %>
      
                <a class="btn btn-info btn-sm" href="<%= create_url %>">
                  <i class="fas fa-plus"></i> Create
                </a>
                <button type="button" id="backButton" class="btn btn-primary btn-sm">
                  <i class="fa fa-arrow-left"></i> Back
                </button>
              </div>
            </div>
          </div>
        <div class="card-body">
        <form method="GET" action="<%= list_url %>" class="mb-3">
  <div class="row">
    <div class="col-md-3">
      <label>Filter by Category</label>
      <select name="category_id" class="form-control">
        <option value="">-- All Categories --</option>
        <% category_list.forEach(cat => { %>
          <option value="<%= cat.id %>" <%= req.query.category_id == cat.id ? 'selected' : '' %>>
            <%= cat.category_name %>
          </option>
        <% }); %>
      </select>
    </div>

    <div class="col-md-3">
      <label>Filter by Status</label>
      <select name="course_status" class="form-control">
        <option value="">-- All Status --</option>
        <option value="1" <%= req.query.course_status == '1' ? 'selected' : '' %>>Active</option>
        <option value="0" <%= req.query.course_status == '0' ? 'selected' : '' %>>Inactive</option>
      </select>
    </div>

    <div class="col-md-3 d-flex align-items-end">
      <button type="submit" class="btn btn-primary me-2">
        <i class="fas fa-filter"></i> Filter
      </button>
      <a href="<%= list_url %>" class="btn btn-secondary">
        <i class="fas fa-times"></i> Reset
      </a>
    </div>
  </div>
</form>
<hr>
            <div class="row">
                <div class="col-12">
                    <div class="table-responsive">
                        <table id="order-listing" class="table">
                            <thead>
                                <tr>
                                    <th>Sr.No #</th>
                                   
                                    <th>Category Name</th>
                                    <th>Course Name</th>
                                    <th>Course Price</th>
                                    <!-- <th>Registration Date</th> -->
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% customers.forEach((course, index) => { %>
                                    <tr>
                                        <td><%= index + 1 %></td>
                                        
                                        <td><%= course.category_name  %></td>
                                        <td><%= course.course_name %></td>
                                        <td>&#8377; <%= course.offer_price %></td>
                                        <!-- <td><%= formatDate(course.created_at) %></td> -->
                                        <td>
                                            <% if (course.status == 1) { %>
                                                <label class="badge badge-success">Active</label>
                                            <% } else { %>
                                                <label class="badge badge-danger">Inactive</label>
                                            <% } %>
                                        </td>
                                        <td>
                                            <a href="/admin/course-edit/<%= course.id %>" class="btn btn-outline-info">Edit</a>
                                            <a href="/admin/course-show/<%= course.id %>" class="btn btn-outline-primary">View</a>
                                            
                                            <a href="/admin/course-delete/<%= course.id %>" class="btn btn-outline-danger">Delete</a>
                                        </td>
                                    </tr>
                                <% }); %>

                                <% function formatDate(dateString) {
                                    const date = new Date(dateString);
                                    const options = { year: 'numeric', month: 'short', day: 'numeric', hour: 'numeric', minute: 'numeric', hour12: true };
                                    return new Intl.DateTimeFormat('en-US', options).format(date);
                                } %>

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../layouts/footer') %>

<script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap4.min.js"></script>

<script>
    $(document).ready(function() {
        $('#order-listing').DataTable();
    });


</script>


