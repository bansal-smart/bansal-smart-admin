<%- include('../layouts/header') %>
<style>
    *,
    tr,
    td,
    p,
    small {
        font-size: 14px
    }
</style>
<section class="content-body">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header d-flex align-items-center justify-content-between">
                        <h4 class="card-title mb-0"><%= page_name %></h4>

                        <div class="row">
                            <div class="col-12 text-end">


                                <a class="btn btn-info btn-sm" href="<%= create_url %>">
                                    <i class="fas fa-plus"></i>
                                </a>
                                <button type="button" id="backButton" class="btn btn-primary btn-sm">
                                    <i class="fa fa-arrow-left"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">

                        <div class="table-responsive">
                            <table id="example3" class="display table-responsive-lg table-bordered">
                                <thead>
                                    <tr>
                                        <th>Sr.No #</th>

                                        <th>Question</th>
                                        <th>Question Image</th>
                                        <th>Question Type</th>
                                        <th>Option A</th>
                                        <th>Option B</th>
                                        <th>Option C</th>
                                        <th>Option D</th>


                                        <!-- <th>Registration Date</th> -->
                                        <!-- <th>Status</th> -->
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% customers.forEach((course, index)=> { %>
                                    <tr>
                                        <td>
                                            <%= index + 1 %>
                                        </td>

                                        <td>
                                          <%= course.question %>
                                            

                                        </td>

                                        <td>
                                            <%- course.question_image %>

                                 

                                        </td>

                                        <td>
                                            <%- course.question_type %>

                                        </td>
                                        <td>
                                            <%- course.optionA %>
                                        </td>
                                        <td>
                                            <%- course.optionB %>
                                        </td>
                                        <td>
                                            <%- course.optionC %>
                                        </td>
                                        <td>
                                            <%- course.optionD %>

                                        </td>

                                        </td>
                                        <!-- <td><%= formatDate(course.created_at) %></td> -->
                                        <!-- <td>
                                                <% if (course.status==1) { %>
                                                    <label class="badge badge-success">Active</label>
                                                    <% } else { %>
                                                        <label class="badge badge-danger">Inactive</label>
                                                        <% } %>
                                            </td>
                                          -->

                                        <td>
                                            <a href="/exam-question/show/<%= course.id %>"
                                                class="btn btn-primary shadow btn-xs sharp me-1"><i
                                                    class="fas fa-eye"></i></a>
                                            <a href="/exam-question/edit/<%= course.id %>"
                                                class="btn btn-primary shadow btn-xs sharp me-1"><i
                                                    class="fas fa-pencil-alt"></i></a>
                                            <a href="/exam-question/delete/<%= course.id %>"
                                                class="btn btn-danger shadow btn-xs sharp"><i
                                                    class="fa fa-trash"></i></a>

                                        </td>

                                    </tr>
                                    <% }); %>

                                    <% function formatDate(dateString) { const date=new Date(dateString); const
                                                options={ year: 'numeric' , month: 'short' , day: 'numeric' ,
                                                hour: 'numeric' , minute: 'numeric' , hour12: true }; return new
                                                Intl.DateTimeFormat('en-US', options).format(date); } %>

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


</div>
<%- include('../layouts/footer') %>
