            <h4 class="card-title mb-0"><%= title %></h4>
            <button type="button" id="backButton" class="btn btn-primary btn-sm">
              <i class="fa fa-arrow-left"></i> Back
            </button>
          </div>
          <div class="card-body">
            <form id="submitForm" class="forms-sample"
                  action="<%= form_url %>"
                  method="post"
                  enctype="multipart/form-data">
              <div class="row">
