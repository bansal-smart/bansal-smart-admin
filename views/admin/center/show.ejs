<%- include('../layouts/header') %>

    <section class="content-body">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h4 class="card-title mb-0">
                                <%= page_name %>
                            </h4>
                            <a href="<%= list_url %>" class="btn btn-primary btn-sm">
                                <i class="fa fa-arrow-left"></i> Back
                            </a>
                        </div>
                        <div class="card-body">
                            <div class="row">


                                
<div class="col-md-4">
  <div class="form-group border rounded p-3 mb-3">
    <label><strong>Name</strong></label>
    <p class="mb-0 text-muted"><%= post.name %></p>
  </div>
</div>

<div class="col-md-4">
  <div class="form-group border rounded p-3 mb-3">
    <label><strong>Slug</strong></label>
    <p class="mb-0 text-muted"><%= post.slug %></p>
  </div>
</div>

<div class="col-md-4">
  <div class="form-group border rounded p-3 mb-3">
    <label><strong>Mobile</strong></label>
    <p class="mb-0 text-muted"><%= post.mobile %></p>
  </div>
</div>

<div class="col-md-4">
  <div class="form-group border rounded p-3 mb-3">
    <label><strong>Email</strong></label>
    <p class="mb-0 text-muted"><%= post.email %></p>
  </div>
</div>

<div class="col-md-4">
  <div class="form-group border rounded p-3 mb-3">
    <label><strong>City Name</strong></label>
    <p class="mb-0 text-muted"><%= post.city_name %></p>
  </div>
</div>

<!-- <div class="col-md-4">
  <div class="form-group border rounded p-3 mb-3">
    <label><strong>Roles</strong></label>
    <p class="mb-0 text-muted"><%= post.roles %></p>
  </div>
</div> -->

<div class="col-md-4">
  <div class="form-group border rounded p-3 mb-3">
    <label><strong>Status</strong></label>
    <p class="mb-0 text-muted">
      <%= post.status == 1 ? 'Active' : 'Inactive' %>
    </p>
  </div>
</div>

<div class="col-md-6">
  <div class="form-group border rounded p-3 mb-3">
    <label><strong>Address</strong></label>
    <p class="mb-0 text-muted" style="white-space: pre-line;"><%= post.address %></p>
  </div>
</div>

<div class="col-md-12">
  <div class="form-group border rounded p-3 mb-3">
    <label><strong>Description</strong></label>
    <p class="mb-0 text-muted" style="white-space: pre-line;"><%- post.description %></p>
  </div>
</div>
<div class="col-md-3">
  <div class="form-group border rounded p-3 mb-3">
    <label><strong>Logo</strong></label>
    <br>
    <% if (post.logo) { %>
      <img src="<%= publicUrl +post.logo %>" width="100" />
    <% } else { %>
      <p>No logo uploaded</p>
    <% } %>
  </div>
</div>
<div class="col-md-6">
  <div class="form-group border rounded p-3 mb-3">
    <label><strong>Map URL</strong></label>
    <p class="mb-0 text-muted"><%= post.map_url %></p>
  </div>
</div>

<div class="col-md-4">
  <div class="form-group border rounded p-3 mb-3">
    <label><strong>Created At</strong></label>
    <p class="mb-0 text-muted"><%= post.created_at %></p>
  </div>
</div>

<div class="col-md-4">
  <div class="form-group border rounded p-3 mb-3">
    <label><strong>Updated At</strong></label>
    <p class="mb-0 text-muted"><%= post.updated_at || 'N/A' %></p>
  </div>
</div>

<% if (post.deleted_at) { %>
  <div class="col-md-4">
    <div class="form-group border rounded p-3 mb-3">
      <label><strong>Deleted At</strong></label>
      <p class="mb-0 text-muted"><%= post.deleted_at %></p>
    </div>
  </div>
<% } %>





